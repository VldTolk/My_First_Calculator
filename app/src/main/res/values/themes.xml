<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFirstCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_600</item>
        <item name="colorPrimaryVariant">@color/red_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="materialButtonStyle">@style/CalcButton</item>
    </style>

    <style name="Theme.MyFirstCalculator.Dark" parent="Theme.MyFirstCalculator">
        <item name="colorPrimary">@color/dark_red_primary</item>
        <item name="colorPrimaryVariant">@color/dark_red_primary_variant</item>
        <item name="materialButtonStyle">@style/CalcButton.Dark</item>
    </style>

</resources>